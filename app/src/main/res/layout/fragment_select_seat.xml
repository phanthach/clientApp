<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvSeat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/filter"
        />
    <RelativeLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6F8F5"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/tvSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvTotalSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvSeat"
            android:text="2"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tông tiền: "
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_below="@+id/tvSeat"
            android:layout_marginBottom="20dp"
            />
        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvPrice"
            android:layout_below="@+id/tvSeat"
            android:text="400.000 VNĐ"
            android:textSize="20dp"
            android:textColor="#3442BD"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_green_border"
            android:layout_below="@id/tvPrice"
            android:layout_centerHorizontal="true"
            android:text="Tiếp tục"
            android:layout_marginBottom="20dp"
            />
    </RelativeLayout>
</RelativeLayout>