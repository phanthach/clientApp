<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E5E5"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_card"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
        <LinearLayout
            android:id="@+id/ttName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            >
            <ImageView
                android:id="@+id/imageVehicle1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/tvNameVehicle1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Thọ Lam"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingEnd="10dp"
                android:background="@null"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <View
            android:id="@+id/duongke"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8B000000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_below="@id/ttName"
            android:layout_marginTop="5dp"
            />
        <LinearLayout
            android:id="@+id/ttRoute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/duongke">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:hint="Tuyến: "
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingEnd="10dp"
                android:background="@null"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tvRoute"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="Ha Noi - Ho Chi Minh"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingEnd="10dp"
                android:background="@null"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ttSeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/ttRoute">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:hint="Số ghế: "
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingEnd="10dp"
                android:background="@null"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tvSeat"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="A1"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:paddingLeft="15dp"
                android:paddingEnd="10dp"
                android:background="@null"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ttPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:layout_below="@+id/ttSeat">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:hint="Giá vé: "
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingEnd="10dp"
                android:background="@null"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:hint="250000 VNĐ"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:paddingEnd="10dp"
                android:background="@null"
                android:singleLine="true"
                android:scrollHorizontally="true"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/ttPrice"
            android:text="Đã thanh toán"
            android:textStyle="italic"
            android:textColor="@color/colorAccent"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            />
    </RelativeLayout>
</RelativeLayout>