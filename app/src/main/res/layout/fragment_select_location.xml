<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <LinearLayout
        android:id="@+id/actionBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#286aa3"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/btBack"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/tvSelect"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:layout_weight="9"
            android:gravity="center_vertical"
            android:text="Chọn chuyến đi"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <com.mapbox.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pick"
        android:layout_below="@+id/actionBar"
        app:mapbox_cameraTargetLat="21.02819540300004"
        app:mapbox_cameraTargetLng="105.85415977800005"
        app:mapbox_cameraZoom="5.0"
        app:mapbox_cameraPitch="0.0"
        app:mapbox_cameraBearing="0.0"
        />
    <LinearLayout
        android:id="@+id/ttDiemDon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/boder_edittex"
        android:layout_below="@+id/actionBar"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="40dp"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_search_24"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            />
        <AutoCompleteTextView
            android:id="@+id/actvSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/actionBar"
            android:hint="Search"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:singleLine="true"
            />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_above="@id/filter"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/titlePick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn điểm lên xe"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:maxHeight="100dp"
            android:gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titlePick"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E6F8F5"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/pickUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boder_edittex"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/lettera"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/pickUpLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/actionBar"
                android:hint="Điểm lên xe"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dropOff"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/boder_edittex"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/pickUp"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/letterb"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:id="@+id/dropOffLocation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/actionBar"
                android:hint="Điểm xuống xe"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:gravity="center_vertical"
                android:textSize="20dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_green_border"
            android:layout_centerHorizontal="true"
            android:text="Tiếp tục"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/dropOff"
            />
    </RelativeLayout>
</RelativeLayout>