<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/orange"
            >
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phan Tuấn Thạch"
                android:layout_below="@id/txt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/boder_view"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                >
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm đi"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    />
                <EditText
                    android:id="@+id/diemDon"
                    style="@style/edit_text"
                    android:layout_below="@+id/tvTitle"
                    android:hint="Nhập điểm đón"
                    />
                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Điểm đến"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_below="@id/diemDon"
                    />
                <EditText
                    android:id="@+id/diemDen"
                    style="@style/edit_text"
                    android:layout_below="@+id/tvTitle2"
                    android:hint="Nhập điểm đến"
                    />
                <TextView
                    android:id="@+id/tvTitle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày đi"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20dp"
                    android:layout_below="@id/diemDen"
                    />
                <LinearLayout
                    android:id="@+id/tvTitle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTitle3"
                    android:weightSum="10"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="20dp"
                    >
                    <EditText
                        android:id="@+id/chonNgayDi"
                        style="@style/edit_text"
                        android:layout_width="0dp"
                        android:layout_below="@+id/tvTitle3"
                        android:hint="dd/MM/yyyy"
                        android:layout_weight="7"
                        />
                    <Switch
                        android:id="@+id/roundTrip"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Khứ hồi"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tvTitle5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày về"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:layout_below="@id/tvTitle4"
                    android:visibility="gone"
                    />
                <LinearLayout
                    android:id="@+id/tvTitle6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTitle5"
                    android:weightSum="10"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone"
                    >
                    <EditText
                        android:id="@+id/chonNgayVe"
                        style="@style/edit_text"
                        android:layout_width="0dp"
                        android:layout_below="@+id/tvTitle3"
                        android:hint="dd/MM/yyyy"
                        android:layout_weight="7"
                        android:visibility="gone"
                        />
                </LinearLayout>
            </RelativeLayout>
            <Button
                android:id="@+id/btnSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_centerHorizontal="true"
                android:text="Tìm kiếm"
                android:layout_marginTop="5dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:backgroundTint="#49A123"
                />
            <TextView
                android:id="@+id/tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnSearch"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:text="Tin tức"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tt"
                android:layout_margin="20sp"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>