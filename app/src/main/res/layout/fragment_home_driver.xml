<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#CCE6E5E5"
    >
        <RelativeLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#286aa3"
            >
            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xin chào"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phan Tuấn Thạch"
                android:layout_below="@id/txt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/logo"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                />
        </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/tvTitle4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="10"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                >
                <TextView
                    android:id="@+id/chonNgayDi"
                    style="@style/edit_text"
                    android:layout_width="0dp"
                    android:layout_below="@+id/tvTitle3"
                    android:hint="dd/MM/yyyy"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:textSize="18dp"
                    />
                <Button
                    android:id="@+id/roundTrip"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="Lọc"
                    android:textStyle="bold"
                    android:layout_weight="3"
                    android:background="@drawable/button_green_border"
                    android:layout_gravity="bottom"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/tvTitle4"
                android:text="Lịch trình của bạn"
                android:textSize="20dp"
                android:textStyle="bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tt"
                android:layout_margin="20sp"
                />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>