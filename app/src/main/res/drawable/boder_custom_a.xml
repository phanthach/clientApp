<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Lớp bóng -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#33FF0000" /> <!-- Màu bóng mờ -->
        </shape>
    </item>
    <!-- Lớp nền -->
    <item android:bottom="4dp" android:right="4dp" android:left="4dp" android:top="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="20dp" />
            <solid android:color="#D8FCFFFF" /> <!-- Màu nền -->
        </shape>
    </item>
</layer-list>
