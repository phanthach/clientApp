<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#AFB6B5"/> <!-- Màu nền khi nhấn -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/> <!-- Màu nền bình thường -->
            <stroke android:width="2dp" android:color="@color/white"/> <!-- Viền -->
        </shape>
    </item>
</selector>