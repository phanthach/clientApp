<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#DDDEDE"/> <!-- Màu nền khi nhấn -->
            <corners android:radius="4dp"/> <!-- Bo góc -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#DDDEDE"/> <!-- Màu nền bình thường -->
            <stroke android:width="2dp" android:color="#DDDEDE"/> <!-- Viền -->
            <corners android:radius="10dp"/> <!-- Bo góc -->
        </shape>
    </item>
</selector>
